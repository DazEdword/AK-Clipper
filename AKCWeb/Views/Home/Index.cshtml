@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AKCWeb</title>

    <environment names="Development">

        <link rel="stylesheet" href="~/css/main.css" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/main.css" />
    </environment>
</head>

<body>
    
    <!-- Scripts -->
    @section Scripts {
        <script type="text/javascript" src="/scripts/main.js"></script>
        <script src="~/jquery.min.js"></script>
        <script src="~/js/skel.min.js"></script>
        <script src="~/js/skel-viewport.min.js"></script>
        <script src="~/js/util.js"></script>
        <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
        <script src="~/js/main.js"></script>
    }

    @section Styles {
        <link href="@Url.Content("~/css/main.css")" rel="stylesheet" type="text/css" />
    }
    
    <div id="page-wrapper">
        <div id="header-wrapper">
            <div class="container">
                <div class="row">
                    <div class="12u">

                        <header id="header">
                            <h1><a href="#" id="logo">Amazing Kindly Clipper 0.3</a></h1>
                            <nav id="nav">
                                <a href="index.html" class="current-page-item">Homepage</a>
                                <a href="onecolumn.html">One Column</a>
                            </nav>
                        </header>
                    </div>
                </div>
            </div>
        </div>
        <div id="banner-wrapper">
            <div class="container">

                <div id="banner">
                   @* HTML for the clipper itself will go in a different component here *@
                    <h2>Put something cool here!</h2>
                    <span>And put something almost as cool here, but a bit longer ...</span>
                </div>
            </div>
        </div>
        <div id="main">
            <div class="container">
                <div class="row main-row">
                    <div class="4u 12u(mobile)">

                        <section>
                            <h2>About AKC</h2>
                            <p>Organize the highlights, notes, and bookmarks from your Kindle with <strong>Amazing Kindly Clipper</strong> (AKC), a free and open source tool letting you sort, search and filter your clippings, with exporting capabilities to CSV, TXT and HTML. Use the web tool above or download AKC for Windows. 
                            </p>
                            <footer class="controls">
                                <a href="http://www.gottabegarabi.com/downloads/" class="button">Download</a>
                            </footer>
                        </section>

                    </div>
                    <div class="4u 12u(mobile)">

                        <section>
                            <h2>Contribute</h2>
                            <ul class="small-image-list">
                                <li>
                                    <a href="https://twitter.com/DazEdword"><img src="~/images/ed_Avatar.png" alt="" class="left" /></a>
                                    <h4>Ed Garabito</h4>
                                    <p><a href="http://gottabegarabi.com">gottabegarabi.com</a></p>
                                </li>
                                <li>
                                    <a href="https://github.com/DazEdword/AKClipper"><img src="~/images/github_logo.png" alt="" class="left" /></a>
                                    <h4>GitHub</h4>
                                    <p>Fork the repo!</p>
                                </li>
                            </ul>
                        </section>

                    </div>
                    <div class="4u 12u(mobile)">

                        <section>
                            <h2>Links</h2>
                            <div>
                                <div class="row">
                                    <div class="6u 12u(mobile)">
                                        <ul class="link-list">
                                            <li><a href="#">Sed neque nisi consequat</a></li>
                                        </ul>
                                    </div>
                                    <div class="6u 12u(mobile)">
                                        <ul class="link-list">
                                            <li><a href="#">Quis accumsan lorem</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
            </div>
        </div>
        <div id="footer-wrapper">
            <div class="container">
                <div class="row">
                    <div id="copyright">
                        &copy; 
                        Ed Garabito. All rights reserved. | Design: <a href="http://html5up.net">HTML5 UP</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
