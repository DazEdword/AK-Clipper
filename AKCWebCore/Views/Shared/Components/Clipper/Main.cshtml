@section Styles {
    <link href="@Url.Content("~/css/main.css")" rel="stylesheet" type="text/css" />
}

<script src="~/js/akc-component-helper.js"        type="text/javascript"></script>

<div id="akc-component">
    <div class="akc-row">
        <div class="col-1">
            <div style="width:100%; height:100%; font-weight: bold; font-size: 1.0em">
                Click "Browse File" button and
                navigate to the folder with your Kindle text file, click file and then "Open" to upload your file.
                If you need help locating your file, find more information <a href="http://www.gottabegarabi.com/blog/amazing-kindly-clipper-for-kindle/">here</a>
            </div>
        </div>
        <div class="col-2">
            <form>
                <label for="file-select" class="button float-right" id="browseButton">Browse</label>
                <input type="file" id="file-select" onchange='SelectFile()' />
            </form>
        </div>
    </div>

    <div class="akc-row">
        <div class="col-3 akc-comp-preview" id="file-preview" style="overflow-y:scroll">
            @{
                foreach (var item in Model) {
                    <div>@item.Value.preview</div>
                }
            }
        </div>
    </div>
    <div class="akc-row">
        <div class="col-1" style="font-weight: bold; font-size: 1.0em">
            <span>
                Select the language of your Kindle device
                and click the "Start" button.
            </span>
            <span>
                <select class="dropdown float-right" name="languages" id="languageSelector">
                    <option value="English">English</option>
                    <option value="Spanish">Spanish</option>
                </select>
            </span>
        </div>
        <div class="col-2">
                <button class="button float-right" disabled id="startParsingButton">
                    Start
                </button>
         </div>
    </div>
</div>