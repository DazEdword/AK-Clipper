<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - AKCWeb</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/main.css" />
        <link href="@Url.Content("~/css/mvc-grid.css")" rel="stylesheet" type="text/css" />
        <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
        <script src="/js/mvc-grid.js"></script>
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/main.css" />
        <link href="@Url.Content("~/css/mvc-grid.css")" rel="stylesheet" type="text/css" />
        <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
        <script src="/js/mvc-grid.js"></script>
        <script>$('.mvc-grid').mvcgrid();</script>
    </environment>
</head>
<body>
    <!-- Scripts -->
    @section Scripts {
        <script type="text/javascript" src="/scripts/main.js"></script>
        <script src="~/js/skel.min.js"></script>
        <script src="~/js/skel-viewport.min.js"></script>
        <script src="~/js/util.js"></script>
        <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
        <script src="~/js/main.js"></script>
    }

    @section Styles {
        <link href="@Url.Content("~/css/main.css")" rel="stylesheet" type="text/css" />
    }
    
    <div id="page-wrapper">
        <div id="header-wrapper">
            <div class="container">
                <div class="row">
                    <div class="12u">
                        <header id="header">
                            <h1><a href="#" id="logo">Amazing Kindly Clipper 0.4</a></h1>
                            <nav id="nav">
                                @Html.ActionLink("Home", "Index", "home", null, null)
                                @Html.ActionLink("About", "Index", "about", null, null)
                            </nav>
                        </header>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
